<UserControl x:Class="HandyTest.Pages.ManualTestView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
             Name="window"
      >

    <Border BorderBrush="#232526" BorderThickness="1">
        <Grid Background="WhiteSmoke"  Name="rowH">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="A" MaxWidth="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--Upper ribbon-->
            <Label Grid.Row="0" Grid.ColumnSpan="3"
                   FontSize="15" Content="HandyTest"
                   Foreground="WhiteSmoke" Background="#232526"
                   HorizontalContentAlignment="Center"
                    
               MouseDown="WindowDragMove"
                   
                  />
            <Button Style="{StaticResource TransparentStyle}" Grid.Column="2" HorizontalAlignment="Right" Width="30" FontSize="10" Background="Transparent" Foreground="WhiteSmoke" Command="{x:Static SystemCommands.CloseWindowCommand}">
                <Button.Content>
                    <StackPanel>
                        <Label Content="✕" HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="15"  Margin="0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource TransparentStyle2}" Grid.Column="2" HorizontalAlignment="Right" Width="30" Margin="0,0,30,0" BorderThickness="0"  Background="Transparent" Foreground="WhiteSmoke" Command="{x:Static SystemCommands.MaximizeWindowCommand}">
                <Button.Content>
                    <StackPanel>
                        <Label Content="&#128470;" HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="15" Margin="0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource TransparentStyle2}" Grid.Column="2" HorizontalAlignment="Right" Width="30" Margin="0,0,60,0"  Background="Transparent" Foreground="WhiteSmoke" Command="{x:Static SystemCommands.MinimizeWindowCommand}">
                <Button.Content>
                    <StackPanel>
                        <Label Content="🗕"  HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="15" Margin="0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource TransparentStyle2}" FontSize="30" Grid.Column="0" HorizontalAlignment="Left" Width="30" Margin="0,0,60,0"  Background="Transparent" Foreground="WhiteSmoke" Click="PreviousWindowBtn">
                <Button.Content>
                    <StackPanel>
                        <Image Source="../Resources/Icons/icons8-back-100.png"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <!--Lower ribbon-->
            <Label FontSize="15"  Grid.Row="2" Grid.ColumnSpan="3" Background="#232526" Foreground="WhiteSmoke"/>

            <!--Content-->
            <Label Grid.Row="1" Content="Menu"
                   Padding="5"
                   FontSize="25"
                   Margin="0,10"
                   HorizontalAlignment="Left"/>
            <DataGrid Name="manualTestDataGrid"
                      Grid.Row="1"
                      BorderThickness="0"
                      BorderBrush="#D4791C"
                      Background="Transparent"
                      Padding="5"
                      GridLinesVisibility="None"
                      Margin="0,40,0,40"
                                  
                      AutoGenerateColumns="False"
                      CanUserResizeColumns="False"
                      CanUserDeleteRows="False"
                      CanUserSortColumns="False"
                      SelectionMode="Single"
                      ColumnWidth="*"
                      
                      HeadersVisibility="Column"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Visible"
                      
                      SelectionChanged="ChangeFunction"
                      ItemsSource="{Binding ManualTestOpt}"
                      IsSynchronizedWithCurrentItem="True"
                      >
                <DataGrid.Columns>
                    <DataGridTemplateColumn CellStyle="{StaticResource selectionIndicator}" MaxWidth="4">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Label Background="#DF964C" Width="4" HorizontalAlignment="Left" Visibility="{Binding IsSelected,
                                 RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, 
                                 Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding Name}" IsReadOnly="True" CellStyle="{StaticResource MyDataGridCell}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Setter Property="TextWrapping" Value="NoWrap" />
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="Padding" Value="5,2"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>

            </DataGrid>

            <!--**************************************************************************-->
            <!--FileChecker-->
            <!--**************************************************************************-->

            <Grid Name="fileChecker" Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" Margin="10" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="9*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBox Name="txtToCheck" Grid.Row="0" Grid.Column="0" Margin="0,0,2,0" BorderBrush="#232526" BorderThickness="1" FontSize="14"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             AllowDrop="True"
                             TextWrapping="Wrap"
                         
                         TextChanged="FileChecker"
                         VerticalScrollBarVisibility="Visible"/>
                <TextBox Name="txtToCheck2" Grid.Row="0" Grid.Column="1" Margin="2,0,0,0" BorderBrush="#232526" BorderThickness="1" FontSize="14"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             AllowDrop="True"
                             TextWrapping="Wrap"
                         TextChanged="FileChecker"
                         VerticalScrollBarVisibility="Visible"/>
                <Label Name="resultLabel" Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" FontWeight="Medium" 
                       VerticalContentAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Grid>


            <!--**************************************************************************-->
            <!--Text Generator-->
            <!--**************************************************************************-->

            <Grid Name="textGenerator" Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" Margin="10" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Content="What should be generated?" FontSize="15" HorizontalContentAlignment="Center"/>
                <GroupBox Grid.Row="1" Grid.RowSpan="2" Header="Choose options" FontSize="15" HorizontalAlignment="Stretch" VerticalAlignment="Top" BorderThickness="2" BorderBrush="#D4791C">
                    <StackPanel HorizontalAlignment="Stretch">
                        <CheckBox x:Name="numbersRbtn" Content="Numbers" Margin="3" FontSize="14"/>
                        <CheckBox x:Name="lettersRbtn" Content="Letters" Margin="3" FontSize="14"/>
                        <CheckBox x:Name="specialCharsRbtn" Content="Special characters" Margin="3" FontSize="14"/>
                        <CheckBox x:Name="charsRbtn" Content="Sample chars" Margin="3" FontSize="14"/>
                        <TextBox Name="charsSample" IsEnabled="{Binding ElementName=charsRbtn,Path=IsChecked}" Margin="3"
                                 AcceptsReturn="False"
                                 AcceptsTab="False"
                                 AllowDrop="True"
                                 MaxLength="100"
                                 FontSize="14"
                                 />
                        <Label Content="Length:" FontSize="14" Margin="3,10,3,0"/>

                        <wpfTool:IntegerUpDown Name="lengthValue"
                                               FontSize="14" Margin="3"
                                               Maximum="100000" Minimum="0"
                                               Watermark="Enter length"
                                               DefaultValue="0"
                                               AllowSpin="True"
                                               ShowButtonSpinner="True"
                                               ClipValueToMinMax="True"
                                               OpacityMask="Black"
                                               />
                    </StackPanel>
                </GroupBox>

                <Button Grid.Row="2" Style="{StaticResource FunctionalButtonStyle}" 
                        Content="Copy" Width="70"
                        Click="TextGenerator"
                        ToolTip="Generate and copy to cliboard"/>
                <Button Grid.Row="2" Style="{StaticResource FunctionalButtonStyle}"                         
                        Content="Preview" HorizontalAlignment="Left" Width="70"
                        ToolTip="Toogle preview ON/OFF"
                        Click="TooglePreview"/>

                <Border Name="previewResult" Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" BorderThickness="2" BorderBrush="#D4791C" Margin="10,5,0,5">
                    <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="10,10,10,40" BorderThickness="1" BorderBrush="#D4791C">
                        <TextBlock x:Name="generateTxtBlk"                             
                               TextWrapping="Wrap"
                                   
                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                           ScrollViewer.CanContentScroll="True"
                              />
                    </ScrollViewer>
                </Border>
                <StackPanel Visibility="{Binding ElementName=previewResult, Path=Visibility}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  Orientation="Horizontal">
                    <wpfTool:IconButton Content="Reset" Margin="20,10" Style="{StaticResource FunctionalButtonStyle}"
                                        Width="50" Height="20"
                                        HorizontalAlignment="Left"
                                        
                                        Click="ClearTxtBlk"/>
                </StackPanel>
                <Label Visibility="{Binding ElementName=previewResult, Path=Visibility}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="Gray" Margin="10,5"
                             Content="{Binding ElementName=generateTxtBlk,Path=Text.Length}" FontSize="14"/>
            </Grid>


        </Grid>
    </Border>
</UserControl>
