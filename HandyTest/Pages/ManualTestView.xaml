            <Button.Content>
                <StackPanel>
                    <Label Content="✕" HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="15"  Margin="0"/>
                </StackPanel>
            </Button.Content>
        </Button>
        <Button Style="{StaticResource TransparentStyle2}" Grid.Column="2" HorizontalAlignment="Right" Width="30" Margin="0,0,30,0" BorderThickness="0"  Background="Transparent" Foreground="WhiteSmoke" Command="{x:Static SystemCommands.MaximizeWindowCommand}">
            <Button.Content>
                <StackPanel>
                    <Label Content="&#128470;" HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="15" Margin="0"/>
                </StackPanel>
            </Button.Content>
        </Button>
        <Button Style="{StaticResource TransparentStyle2}" Grid.Column="2" HorizontalAlignment="Right" Width="30" Margin="0,0,60,0"  Background="Transparent" Foreground="WhiteSmoke" Command="{x:Static SystemCommands.MinimizeWindowCommand}">
            <Button.Content>
                <StackPanel>
                    <Label Content="🗕"  HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="15" Margin="0"/>
                </StackPanel>
            </Button.Content>
        </Button>
        -->
        <Button
            Width="30"
            Height="30"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="PreviousWindowBtn"
            Style="{StaticResource TransparentStyle2}">
            <Image Source="../Resources/Icons/icons8-wstecz-100.png" />
        </Button>
        <!--  Lower ribbon  -->
        <!--<Label FontSize="15"  Grid.Row="2" Grid.ColumnSpan="3" Background="#232526" Foreground="WhiteSmoke"/>-->

        <!--  Content  -->
        <Label
            Grid.Row="1"
            Margin="0,0,0,10"
            Padding="5"
            HorizontalAlignment="Left"
            Content="Menu"
            FontSize="25" />
        <DataGrid
            Name="manualTestDataGrid"
            Grid.Row="1"
            Margin="0,25,0,40"
            Padding="0,5,5,5"
            AutoGenerateColumns="False"
            Background="Transparent"
            CanUserDeleteRows="False"
            CanUserResizeColumns="False"
            CanUserSortColumns="False"
            ColumnWidth="*"
            GridLinesVisibility="None"
            HeadersVisibility="Column"
            HorizontalScrollBarVisibility="Disabled"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding ManualTestOpt}"
            SelectionChanged="ChangeFunction"
            SelectionMode="Single"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTemplateColumn MaxWidth="4" CellStyle="{StaticResource selectionIndicator}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Label
                                Width="4"
                                HorizontalAlignment="Left"
                                Background="#DF964C"
                                Visibility="{Binding IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    CellStyle="{StaticResource MyDataGridCell}"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="{x:Type TextBlock}">
                            <Setter Property="TextWrapping" Value="NoWrap" />
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                            <Setter Property="Padding" Value="5,2" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>

        </DataGrid>

        <!--  **************************************************************************  -->
        <!--  FileChecker  -->
        <!--  **************************************************************************  -->

        <Grid
            Name="fileChecker"
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            VerticalAlignment="Stretch"
            Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBox
                Name="txtToCheck"
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,2,0"
                AcceptsReturn="True"
                AcceptsTab="True"
                AllowDrop="True"
                BorderBrush="#232526"
                BorderThickness="1"
                FontSize="14"
                TextChanged="FileChecker"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />
            <TextBox
                Name="txtToCheck2"
                Grid.Row="0"
                Grid.Column="1"
                Margin="2,0,0,0"
                AcceptsReturn="True"
                AcceptsTab="True"
                AllowDrop="True"
                BorderBrush="#232526"
                BorderThickness="1"
                FontSize="14"
                TextChanged="FileChecker"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />
            <Label
                Name="resultLabel"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="15"
                FontWeight="Medium" />
        </Grid>


        <!--  **************************************************************************  -->
        <!--  Text Generator  -->
        <!--  **************************************************************************  -->

        <Grid
            Name="textGenerator"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="10,20"
            VerticalAlignment="Stretch"
            Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="200" MaxWidth="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.RowSpan="3">
                <GroupBox
                    Name="grpBox"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    BorderBrush="#D4791C"
                    BorderThickness="2"
                    FontSize="15"
                    Header="What should be generated?"
                    Style="{x:Null}">
                    <StackPanel HorizontalAlignment="Stretch">
                        <CheckBox
                            x:Name="numbersRbtn"
                            Margin="3"
                            Content="Numbers"
                            FontSize="14" />
                        <CheckBox
                            x:Name="lettersRbtn"
                            Margin="3"
                            Content="Letters"
                            FontSize="14" />
                        <CheckBox
                            x:Name="specialCharsRbtn"
                            Margin="3"
                            Content="Special characters"
                            FontSize="14" />
                        <CheckBox
                            x:Name="charsRbtn"
                            Margin="3"
                            Content="Sample chars"
                            FontSize="14" />
                        <TextBox
                            Name="charsSample"
                            Height="{Binding ElementName=lengthValue, Path=ActualHeight}"
                            Margin="3"
                            Controls:TextBoxHelper.ClearTextButton="True"
                            Controls:TextBoxHelper.Watermark="Enter chars"
                            AcceptsReturn="False"
                            AcceptsTab="False"
                            AllowDrop="True"
                            FontSize="14"
                            IsEnabled="{Binding ElementName=charsRbtn, Path=IsChecked}"
                            MaxLength="100" />
                        <!--<wpfTool:IntegerUpDown Name="lengthValue"
                                               FontSize="14" Margin="3"
                                               Maximum="100000" Minimum="0"
                                               Watermark="Enter length"
                                               DefaultValue="0"
                                               AllowSpin="True"
                                               ShowButtonSpinner="True"
                                               ClipValueToMinMax="True"
                                               OpacityMask="Black"
                                               />-->
                        <Controls:NumericUpDown
                            Name="lengthValue"
                            Height="Auto"
                            Margin="3"
                            HorizontalContentAlignment="Left"
                            Controls:TextBoxHelper.Watermark="Length"
                            FontSize="14"
                            Maximum="100000"
                            Minimum="0"
                            ValueChanged="WarningTextSize" />
                    </StackPanel>
                </GroupBox>
                <DockPanel
                    Name="warningTextGen"
                    Margin="0,10"
                    VerticalAlignment="Top"
                    Visibility="Hidden">
                    <Image
                        Width="35"
                        Height="35"
                        Source="../Resources/Icons/icons8-warning.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Normal"
                        Text="Generating big amount of text may take a while!"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Visibility="Visible" />
                </DockPanel>
                <DockPanel
                    Name="errorTextGen"
                    Margin="0,10"
                    VerticalAlignment="Top"
                    Visibility="Hidden">
                    <Image
                        Width="35"
                        Height="35"
                        Source="../Resources/Icons/icons8-warning-red.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Normal"
                        Text="Maximum size reached."
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Visibility="Visible" />
                </DockPanel>
            </StackPanel>



            <Button
                Grid.Row="2"
                Width="70"
                Click="TextGenerator"
                Content="Generate"
                Style="{StaticResource FunctionalButtonStyle}" />

            <GroupBox
                Name="previewResult"
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="1"
                Margin="10,0"
                BorderBrush="#D4791C"
                BorderThickness="2"
                FontSize="14"
                Header="Preview"
                Style="{x:Null}"
                Visibility="Visible">
                <ScrollViewer
                    Margin="10,10,10,40"
                    BorderBrush="#D4791C"
                    BorderThickness="1"
                    VerticalScrollBarVisibility="Visible">
                    <TextBlock
                        x:Name="generateTxtBlk"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SizeChanged="ErrorTextSize"
                        TextWrapping="Wrap" />
                </ScrollViewer>
            </GroupBox>
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Orientation="Horizontal"
                Visibility="{Binding ElementName=previewResult, Path=Visibility}">
                <Button
                    Width="50"
                    Height="20"
                    Margin="20,10"
                    HorizontalAlignment="Left"
                    Click="ClearTxtBlk"
                    Content="Reset"
                    Style="{StaticResource FunctionalButtonStyle}" />
                <Button
                    Width="50"
                    Height="20"
                    Margin="0,10"
                    Click="CopyToClipboard"
                    Content="Copy"
                    Style="{StaticResource FunctionalButtonStyle}" />
            </StackPanel>
            <!--<StackPanel
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal"
                Visibility="{Binding ElementName=previewResult, Path=Visibility}">

                <Label
                    Margin="0,5"
                    Content="{Binding ElementName=generateTxtBlk, Path=Text.Length}"
                    FontSize="14"
                    Foreground="Gray" />
                <Label
                    Margin="0,5"
                    Content="/  100000"
                    FontSize="14"
                    Foreground="Gray" />-->

            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Margin="20,8"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="14"
                Foreground="Gray"
                Visibility="{Binding ElementName=previewResult, Path=Visibility}">
                <Run Text="{Binding ElementName=generateTxtBlk, Path=Text.Length, Mode=OneWay}" />
                <Run Text="/ 100000" />
            </TextBlock>
            <!--</StackPanel>-->
        </Grid>


    </Grid>
</UserControl>
