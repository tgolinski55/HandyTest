        <!--  Projects list  -->
        <Label
            Grid.Row="1"
            Margin="0,30,0,10"
            Padding="5"
            HorizontalAlignment="Left"
            Content="Projects"
            FontSize="25" />
        <DataGrid
            Name="projectsListDataGrid"
            Grid.Row="1"
            Margin="0,55,0,70"
            Padding="0,5,5,5"
            AutoGenerateColumns="False"
            Background="Transparent"
            BorderBrush="#D4791C"
            BorderThickness="0"
            CanUserDeleteRows="False"
            CanUserResizeColumns="False"
            CanUserSortColumns="False"
            CellStyle="{StaticResource MyDataGridCell}"
            DataContextChanged="projectsListDataGrid_DataContextChanged"
            GridLinesVisibility="None"
            HeadersVisibility="Column"
            HorizontalScrollBarVisibility="Disabled"
            IsSynchronizedWithCurrentItem="True"
            SelectionMode="Single"
            VerticalScrollBarVisibility="Visible">

            <DataGrid.Columns>
                <DataGridTemplateColumn MaxWidth="4" CellStyle="{StaticResource selectionIndicator}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Label
                                Width="4"
                                HorizontalAlignment="Left"
                                Background="#DF964C"
                                Visibility="{Binding IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    CellStyle="{StaticResource MyDataGridCell}"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="{x:Type TextBlock}">
                            <Setter Property="TextWrapping" Value="NoWrap" />
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                            <Setter Property="Padding" Value="5,2" />
                            <Setter Property="Margin" Value="5,0,0,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Date}"
                    CellStyle="{StaticResource MyDataGridCell}"
                    IsReadOnly="True">

                    <DataGridTextColumn.ElementStyle>
                        <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,2" />
                            <Setter Property="FontStyle" Value="Italic" />
                            <Setter Property="FontSize" Value="13" />
                            <Setter Property="Cursor" Value="Arrow" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn CellStyle="{StaticResource deleteBtnGridCell}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Click="DeleteProjectBtn"
                                Style="{StaticResource DeleteButtonStyle}"
                                ToolTip="Delete"
                                Visibility="{Binding IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button
            Name="createNewProjectBtn"
            Margin="10,0,10,15"
            Click="CreateNewProjectBtn_Click"
            Content="Create New"
            Style="{StaticResource FunctionalButtonStyle}" />

        <Button
            Name="makeActiveProjectBtn"
            Margin="10,0,10,15"
            HorizontalAlignment="Left"
            Click="MakeActiveProjectBtn_Click"
