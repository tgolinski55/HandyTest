                        Opacity="0.6" />
                    <Label
                        Height="100"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#D4791C"
                        Content="Select project"
                        FontSize="50"
                        FontStyle="Italic"
                        FontWeight="Light"
                        Foreground="WhiteSmoke"
                        Opacity="1" />
                </Grid>
            </DockPanel>

            <Button
                Grid.Row="1"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
