                    <Image MaxHeight="70" Source="../Resources/Icons/icons8-test-zaliczony-100.png" />
                    <TextBlock
                        FontSize="20"
                        Text="Manual test"
                        TextAlignment="Center" />
                </StackPanel>

            </Button>
            <TextBlock
                x:Name="activeProjectTxtBlock"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="10"
                Padding="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                FontSize="40"
                FontStyle="Italic"
                Foreground="Black"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />

            <Button
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Style="{StaticResource ImageButtonStyle}">
                <StackPanel>
                    <Image MaxHeight="70" Source="../Resources/Icons/icons8-otwórz-dokument-100.png" />
                    <TextBlock
                        FontSize="20"
                        Text="Create report"
                        TextAlignment="Center" />
                </StackPanel>

            </Button>
            <Button
