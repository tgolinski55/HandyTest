                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                HorizontalContentAlignment="Center"
                                Background="#232526"
                                Content="Create new project"
                                FontSize="15"
                                Foreground="WhiteSmoke" />
                            <Button
                                Grid.Column="1"
                                Width="30"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                Click="Close_PopUp"
                                FontSize="10"
                                Foreground="WhiteSmoke"
                                Style="{StaticResource TransparentStyle}">
                                <Button.Content>
                                    <StackPanel>
                                        <Label
                                            Margin="0"
                                            HorizontalAlignment="Center"
                                            Content="✕"
                                            FontSize="15"
                                            Foreground="WhiteSmoke" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="5"
                                Padding="5"
                                Content="Name:"
                                FontSize="15" />
                            <TextBox
                                Name="newProjectName"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5"
                                Padding="5"
                                AcceptsReturn="False"
                                AcceptsTab="False"
                                AllowDrop="True"
                                Background="Transparent"
                                BorderBrush="Black"
                                BorderThickness="1"
                                FontSize="15"
                                MaxLength="100"
                                MaxLines="1"
                                TextWrapping="Wrap"
                                ToolTip="Enter project name" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="5"
                                Padding="5"
                                Content="Description:"
                                FontSize="15" />


                            <TextBox
                                Name="newProjectDescription"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5"
                                Padding="5"
                                AcceptsReturn="True"
                                AcceptsTab="False"
                                AllowDrop="True"
                                Background="Transparent"
                                BorderBrush="Black"
                                BorderThickness="1"
                                FontSize="15"
                                MaxLength="1000"
                                MinLines="4"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                TextWrapping="Wrap"
                                ToolTip="Enter description" />

                            <Button
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="5,10,5,5"
                                Click="UpdateProjectsList"
                                Content="Create"
                                Style="{StaticResource FunctionalButtonStyle}" />
                            <Button
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="5,10,5,5"
                                HorizontalAlignment="Left"
                                Click="Close_PopUp"
                                Content="Cancel"
                                Style="{StaticResource FunctionalButtonStyle}" />
                        </Grid>

                    </StackPanel>

                </Border>
            </Popup>
        </Grid>
    </Grid>
</UserControl>
