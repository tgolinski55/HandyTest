                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--<Label Name="selectProjectLabel" Grid.ColumnSpan="3" Grid.RowSpan="3" Opacity="1" HorizontalContentAlignment="Stretch" Margin="5" BorderThickness="1" BorderBrush="Black">
