<Window x:Class="HandyTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandyTest"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="HandyTest" Height="450" Width="800"
        MinHeight="300"
        MinWidth="400"  
        ResizeMode="CanResizeWithGrip" FontFamily="Segoe UI Semilight"
        >
    

    <Window.Resources>
        <Style x:Key="TransparentStyle" TargetType="{x:Type Button}">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Red"/>
                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid Background="Transparent">
                                <ContentPresenter>
                                </ContentPresenter>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <Style x:Key="TransparentStyle2" TargetType="{x:Type Button}">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Gray"/>
                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid Background="Transparent">
                                <ContentPresenter>
                                </ContentPresenter>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" Executed="CloseCommandHandler"/>
        <CommandBinding Command="{x:Static SystemCommands.MinimizeWindowCommand}" Executed="MinimizeCommandHandler"/>
        <CommandBinding Command="{x:Static SystemCommands.MaximizeWindowCommand}" Executed="MaximizeCommandHandler"/>
    </Window.CommandBindings>

    <Border BorderBrush="#232526" BorderThickness="1">
        <Grid Background="#434343">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--Upper ribbon-->
            <Label Grid.Row="0" Grid.ColumnSpan="3"  FontSize="15" Content="HandyTest" Foreground="WhiteSmoke" HorizontalContentAlignment="Center" Background="#232526" MouseDown="Window_MouseDown"/>

            <Button Style="{StaticResource TransparentStyle}" Grid.Column="2" HorizontalAlignment="Right" Width="30" FontSize="10" Background="Transparent" Foreground="WhiteSmoke" Command="{x:Static SystemCommands.CloseWindowCommand}">
                <Button.Content>
                    <StackPanel>
                        <Label Content="✕" HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="15"  Margin="0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource TransparentStyle2}" Grid.Column="2" HorizontalAlignment="Right" Width="30" Margin="0,0,30,0" BorderThickness="0"  Background="Transparent" Foreground="WhiteSmoke" Command="{x:Static SystemCommands.MaximizeWindowCommand}">
                <Button.Content>
                    <StackPanel>
                        <Label Content="&#128470;" HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="15" Margin="0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource TransparentStyle2}" Grid.Column="2" HorizontalAlignment="Right" Width="30" Margin="0,0,60,0"  Background="Transparent" Foreground="WhiteSmoke" Command="{x:Static SystemCommands.MinimizeWindowCommand}">
                <Button.Content>
                    <StackPanel>
                        <Label Content="🗕"  HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="15" Margin="0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <!--Lower ribbon-->
            <Label Content="ver. 1.0.0.1" FontSize="15"  Grid.Row="2" Grid.ColumnSpan="3" Background="#232526" Foreground="WhiteSmoke"/>


            <!--Separator-->
            <Label Grid.Row="1" BorderBrush="WhiteSmoke" BorderThickness="0,0,1,0" Background="Transparent" IsEnabled="False" Margin="0,5" />
            
            <!--Projects list-->
            <!--TODO connect to db-->
            <DataGrid Name="projectsListDataGrid"
                      Grid.Row="1"
                      BorderThickness="0"
                      Background="Transparent"
                      Padding="5"
                      Margin="0,20,0,40"
                      
                      AutoGenerateColumns="False"
                      CanUserResizeColumns="False"
                      CanUserDeleteRows="False"
                      CanUserSortColumns="False"
                      SelectionMode="Single"
                      
                      HeadersVisibility="Column"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Disabled"
                      SelectionChanged="projectsListDataGrid_SelectionChanged"
                      
                      Loaded="ProjectsListDataGrid_Loaded"
                      SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                      ItemsSource="{Binding ProjecsList}"
                      >
                <!--Styles-->
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="LightGray"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderThickness" Value="0,0,1,2"/>
                        <Setter Property="FontSize" Value="20"/>
                    </Style>

                    <!--TODO cell style-->
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="BorderThickness" Value="0,0,0,0"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="IsEditing" Value="False"/>
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="FontSize" Value="15"/>
                    </Style>
                </DataGrid.Resources>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Projects" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Name="createNewProjectBtn" Grid.Row="1" Grid.Column="0"
                    Height="30" Width="90"
                    Content="Create New" FontSize="15"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="5"
                    Click="ProjectsListDataGrid_Loaded"/>
            
            <Button Name="makeActiveProjectBtn" Grid.Row="1" Grid.Column="0"
                    Height="30" Width="90"
                    Content="Make Active" FontSize="15"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="5"
                    Click="makeActiveProjectBtn_Click"/>


            <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button Grid.Row="1"
                        Margin="10">
                    <TextBlock Text="Manual test" FontSize="20"/>
                </Button>
                <TextBlock x:Name="activeProjectTxtBlock" 
                    Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                       Text="Project_name" FontSize="30" Foreground="WhiteSmoke" FontStyle="Italic"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Stretch" 
                       />
                <Button Grid.Row="1" Grid.Column="1"
                        Margin="10">
                    <TextBlock Text="Create report" FontSize="20"/>
                </Button>
                <Button Grid.Row="2" Grid.Column="1"   
                        Margin="10">
                    <TextBlock  Text="Log" FontSize="20"/>
                </Button>
                <Button Grid.Row="1" Grid.Column="2"                
                        Margin="10">
                    <TextBlock  Text="Automatic test" FontSize="20"/>
                </Button>

            </Grid>
        </Grid>
    </Border>
</Window>
